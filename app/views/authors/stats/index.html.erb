<h4 class="mb-4">
  <span>Stats</span>
</h4>

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        7 Day Views
      </div>
        <div class="card-body">
          <canvas id="views" width="400" height="400" data-dates="<%= @count_by_date.keys %>" data-views="<%= @count_by_date.values %>"></canvas>
        </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        7 Day Unique Views
      </div>
      <div class="card-body">
        <canvas id="uniqViews" width="400" height="400" data-dates="<%= @unique_count_by_date.keys %>" data-views="<%= @unique_count_by_date.values %>"></canvas>
      </div>
    </div>
  </div>
</div>
